<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E0F7FA"
    tools:context=".screens.InfoCarActivity">

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/round_font"
        android:gravity="center"
        android:text="יצירת רכב"
        android:textColor="#0B4F86"
        android:textSize="36sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.card.MaterialCardView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        app:cardCornerRadius="28dp"
        app:cardElevation="6dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5"
        app:layout_constraintWidth_percent="0.8">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#9DAFFAFA"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="36dp">

            <EditText
                android:id="@+id/et_add_car_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:fontFamily="@font/round_font"
                android:gravity="right"
                android:hint="סוג רכב"
                android:textColor="#0B4F86"
                android:textSize="18sp" />

            <Spinner
                android:id="@+id/sp_add_car_rank"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:backgroundTint="#0B4F86" />

            <EditText
                android:id="@+id/et_add_car_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:backgroundTint="#0B4F86"
                android:editable="false"
                android:fontFamily="@font/round_font"
                android:gravity="right"
                android:hint="מספר רכב"
                android:inputType="number"
                android:textColorHint="#0B4F86"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/et_add_car_insurance_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:focusable="false"
                android:clickable="true"
                android:hint="תאריך ביטוח אחרון"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/et_add_car_license_car_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:backgroundTint="#0B4F86"
                android:fontFamily="@font/round_font"
                android:gravity="right"
                android:hint="תאריך רישיון רכב אחרון"
                android:textColorHint="#0B4F86"
                android:textSize="18sp"
                android:focusable="false"
                android:clickable="true" />


            <Button
                android:id="@+id/btn_add_car_submit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="30dp"
                android:layout_marginBottom="16dp"
                android:backgroundTint="#388FC3"
                android:fontFamily="@font/round_font"
                android:text="הוספה" />


        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>