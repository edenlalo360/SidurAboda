<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E0F7FA"
    tools:context=".screens.InfoCarActivity">

    <TextView
        android:id="@+id/titleInfoCar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="עדכון פרטים"
        android:gravity="center"
        android:textColor="#0B4F86"
        android:textSize="36sp"
        android:textStyle="bold"
        android:fontFamily="@font/round_font"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="28dp"
        app:cardElevation="6dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="110dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.8">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#9DAFFAFA"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="0dp">

            <EditText
                android:id="@+id/et_register_first_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:backgroundTint="#0B4F86"
                android:fontFamily="@font/round_font"
                android:gravity="right"
                android:hint="שם פרטי"
                android:textColorHint="#0B4F86"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/et_register_last_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:backgroundTint="#0B4F86"
                android:fontFamily="@font/round_font"
                android:gravity="right"
                android:hint="שם משפחה"
                android:textColorHint="#0B4F86"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/et_register_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:backgroundTint="#0B4F86"
                android:fontFamily="@font/round_font"
                android:gravity="right"
                android:hint="מספר טלפון"
                android:inputType="phone"
                android:textColorHint="#0B4F86"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/et_register_num_license"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:backgroundTint="#0B4F86"
                android:fontFamily="@font/round_font"
                android:gravity="right"
                android:hint="מספר רישיון נהיגה"
                android:inputType="number"
                android:textColorHint="#0B4F86"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/et_register_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:backgroundTint="#0B4F86"
                android:fontFamily="@font/round_font"
                android:gravity="right"
                android:hint="סיסמא"
                android:inputType="number"
                android:textColorHint="#0B4F86"
                android:textSize="18sp" />

            <Button
                android:id="@+id/btnupdate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="30dp"
                android:backgroundTint="#388FC3"
                android:fontFamily="@font/round_font"
                android:text="עדכון" />

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <Button
        android:id="@+id/updateTOmain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:layout_marginBottom="16dp"
        android:backgroundTint="#388FC3"
        android:fontFamily="@font/round_font"
        android:text="בית"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>