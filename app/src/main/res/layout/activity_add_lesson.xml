<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E0F7FA"

    tools:context=".screens.AddLessonActivity">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/round_font"
            android:gravity="center"
            android:text="קביעת שיעור"
            android:textColor="#0B4F86"
            android:textSize="36sp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.card.MaterialCardView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            app:cardCornerRadius="28dp"
            app:cardElevation="6dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView5"
            app:layout_constraintWidth_percent="0.8">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#9DAFFAFA"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:padding="36dp">

                <EditText
                    android:id="@+id/et_add_lesson_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    android:backgroundTint="#0B4F86"
                    android:clickable="true"
                    android:focusable="false"
                    android:fontFamily="@font/round_font"
                    android:gravity="right"
                    android:hint="מועד שיעור רצוי"
                    android:inputType="date"
                    android:textColorHint="#0B4F86"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/et_long_lesson"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    android:hint="אורך שיעור (בדקות)"
                    android:backgroundTint="#0B4F86"
                    android:inputType="time" />

                <Spinner
                    android:id="@+id/sp_choose_student"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    android:backgroundTint="#0B4F86" />
                <Spinner
                    android:id="@+id/sp_choose_car"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    android:backgroundTint="#0B4F86" />


                <Button
                    android:id="@+id/btn_add_lesson_submit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="30dp"
                    android:layout_marginBottom="16dp"
                    android:backgroundTint="#388FC3"
                    android:fontFamily="@font/round_font"
                    android:text="קבע" />


            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>



</androidx.constraintlayout.widget.ConstraintLayout>