<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E0F7FA"
    tools:context=".screens.MainActivity">

    <TextView
        android:id="@+id/mainTitle"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:fontFamily="@font/round_font"
        android:gravity="center"
        android:text="תפריט ראשי"
        android:textColor="#0B4F86"
        android:textSize="36sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="28dp"
        app:cardElevation="6dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="110dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.8">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#9DAFFAFA"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="36dp">

            <Button
                android:id="@+id/mainTOsiduryomavoda"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="24dp"
                android:backgroundTint="#388FC3"
                android:fontFamily="@font/round_font"
                android:text="סידור יום עבודה" />

            <Button
                android:id="@+id/mainTOstudentslist"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="24dp"
                android:backgroundTint="#388FC3"
                android:fontFamily="@font/round_font"
                android:text="רשימת תלמידים" />

            <Button
                android:id="@+id/mainTOtestslist"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="24dp"
                android:backgroundTint="#388FC3"
                android:fontFamily="@font/round_font"
                android:text="רשימת טסטים" />

            <Button
                android:id="@+id/mainTOaddstudent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="24dp"
                android:backgroundTint="#388FC3"
                android:fontFamily="@font/round_font"
                android:text="הוספת תלמיד" />

            <Button
                android:id="@+id/mainTOinfocar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="24dp"
                android:backgroundTint="#388FC3"
                android:fontFamily="@font/round_font"
                android:text="ניהול רכב" />

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <ImageButton
        android:id="@+id/btn_sign_out"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#E0F7FA"
        app:srcCompat="@drawable/logout"
        tools:layout_editor_absoluteX="338dp"
        tools:layout_editor_absoluteY="40dp" />

</androidx.constraintlayout.widget.ConstraintLayout>